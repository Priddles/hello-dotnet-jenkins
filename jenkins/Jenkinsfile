pipeline {
  agent any

  stages {
    stage('Restore') {
      steps {
        sh 'dotnet restore'
      }
    }

    stage('Unit Tests') {
      steps {
        sh 'dotnet test --logger:xunit'
      }
    }

    stage('Staging') {
      steps {
        echo 'Deploy to staging...'
      }
    }
  }

  post {
    always {
      xunit(tools: [xUnitDotNet(pattern: '**/TestResults/*.xml')])
    }
  }
}
